# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# SolrMigrator
GET        /                    controllers.SolrMigrator.index()
GET        /import              controllers.SolrMigrator.importData()

# DataManipulator
GET        /filter/epicurious        controllers.DataManipulator.filterEpicuriousRecipes()
GET        /recipe/fix/titles        controllers.DataManipulator.formatRecipeTitles()


# DOMParser
GET     /parse/epicurious             controllers.DOMParser.parseEpicurious()


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
